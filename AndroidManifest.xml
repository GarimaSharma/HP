<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thoughtworks.hp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9"/>


    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".HypercityApplication"
        android:icon="@drawable/hypercity"
        android:theme="@android:style/Theme.Black.NoTitleBar"
        android:label="@string/app_name">

        <activity android:name=".activities.AddProductActivity" />
        <activity android:name=".activities.ShoppingListListingActivity" />
        <activity android:name=".activities.AddQuantityActivity" />
        <activity android:name=".epromos.DragActivity" />
        <activity android:name=".HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".epromos.SelectDealActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
